<Equipment>
<!-- Healing Grenade -->
    <Grenade
        name="GFL-GEAR-MEDIC-GRENADE"
        inventoryBinding="UtilityPouch"
        quantity="2"
        tooltip="@GEAR-MEDIC-GRENADE-NAME"
        description="@GEAR-MEDIC-GRENADE-DESC"
        img="data/models/equipment/smoke_grenade_ui.dds"
        movie="data/movies/smoke_grenade.ogv"
        animationSet="grenade"
        soundUse="grenade_use"
        soundUseVoice="VOX_GEAR_SMOKE"
    >
        <RenderObject3D
            model="data/models/equipment/smoke_grenade.khm"
            skipGOSSAO="true"
            diffuseTex="data/models/equipment/smoke_grenade.dds"
        />
        <ConcealmentModifier add="-0.5" />
        <MobilityModifiers
            moveSpeedModifierPercent="-0.5"
            turnSpeedModifierPercent="0"
        />

        <ModifiableParams
            changeInTime="0"
            changeOutTime="0"
            throwTime="1000"
            throwTimeCorner="1400"
        />

        <Projectile
            bodyTemplate="SmokeGrenade"
            pathIconTexture="data/textures/gui/contextual/pathicon_stinger_active.tga"
            soundExplosion="flash_expl"
            soundHitFloor="grenade_hit_floor"
            friendlyFire="true"
            triggerOnImpact="false"
            triggerTimeAfterTargetHitMsec="500"
            physicsDetonationForce="20"
            audibleLaunchSoundRadius="0"
            audibleDetonationSoundRadius="15"
        >
            <!-- spawn these when exploding -->
            <FX particles="Flashbang" entity1="ExplosionLight" anim2D="">
            </FX>

            <EffectRange radiusMeters="2.5">
                <DamageEffect chancePercent="100" damage="-100" damageType="1" />
            </EffectRange>
        </Projectile>
    </Grenade>

<!-- Searing Finale -->
    <Grenade
        name="GFL-GEAR-VECTOR-GRENADE" 
        inventoryBinding="SupportGear1"
		quantity="5"
		tooltip="@GEAR-VECTOR-GRENADE-NAME"
		description="@GEAR-VECTOR-GRENADE-DESC"
		img="data/models/equipment/smoke_grenade_ui.dds"
		movie="data/movies/molotov.ogv"
        soundUse="grenade_use"
        animationSet="grenade"
    >
    
        <RenderObject3D 
            model="data/models/equipment/smoke_grenade.khm" 
            skipGOSSAO="true" diffuseTex="data/models/equipment/smoke_grenade.dds"
        />
    
	    <ConcealmentModifier add="-2"/>
	
	    <MobilityModifiers 
	        moveSpeedModifierPercent="-1" 
	        turnSpeedModifierPercent="0"
	    />
	
	    <ModifiableParams
            changeInTime="0"
            changeOutTime="0"
            throwTime="1000"
            throwTimeCorner="1400"
        />
    
        <Projectile
            bodyTemplate="SmokeGrenade"
		    trailParticles="SmokeGrenadeTrail"
		    pathIconTexture="data/textures/gui/contextual/pathicon_flashbang_active.tga"
		    soundExplosion="flash_expl"
		    soundOnSpawn="smoke_throw"
		    soundFollow="smoke_loop"
		    soundHitFloor="grenade_hit_floor"
		    friendlyFire="false"
		    triggerOnImpact="false"
		    triggerTimeAfterTargetHitMsec="200"
		    physicsDetonationForce="20"
		    audibleLaunchSoundRadius="0"
		    audibleDetonationSoundRadius="15"
        >
            <!-- spawn these when exploding -->
	    <FX
		    particles="Molotov_Explosion"
		    entity1="scorch_mark_molotov_central"
		    randRotation1="true"
		    entity2="fire_molotov"
		    deleteAfterMS2="15000"
		    entity3="Light_FireLarge"
		    deleteAfterMS3="15000"
	    />
	
		<EffectRange radiusMeters="2.0">
		    <StunEffect 
		        chancePercent="100" 
		        innerRangeTimeMSec="1500" 
		        outerRangeTimeMSec="1500"
		    /> 
		    <DamageEffect 
		        chancePercent="100" 
		        damage="55" damageType="0"  
		        armorPenetration="0"
		    />
		    <FireEffect durationMSec="9000"/>
		    <DOTEffect 
		        durationMSec="15000" 
		        dps="15.0"
		    />
		</EffectRange>

		<EffectRange radiusMeters="2.5">
			<ScatterEffect chancePercent="100"/>
			<SuppressEffect amount="30"/>
        </EffectRange>
			
		<EffectRange radiusMeters="3">
			<ScatterEffect 
			    chancePercent="100" 
			    armorPenetration="0" 
			    innerRangeTimeMSec="8000" 
			    outerRangeTimeMSec="5000"/>
				<SuppressEffect amount="15"/>
		</EffectRange>			
			
	</Projectile>	
    </Grenade>
  
</Equipment>
